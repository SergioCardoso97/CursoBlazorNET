@using Entities
@using Business

@inject NavigationManager NavManager

<div>
    <EditForm Model="oCategory">
        <div class="form-group">
            <label>Referencia:</label>
            <InputText @bind-Value="oCategory.CategoryId" class="form-control"/>
        </div>
        <div class="form-group">
            <label>Nombre de la Categoria:</label>
            <InputText @bind-Value="oCategory.CategoryName" class="form-control"/>
        </div>
        <input type="button" value="crear categoria" @onclick="SaveCategory" class="btn btn-primary mt-2"/>
    </EditForm>
</div>

@code {
    Category oCategory = new Category();
    B_Category bCategory = new B_Category();

    private void SaveCategory()
    {
        bCategory.CreatedCategory(oCategory);
        NavManager.NavigateTo("category/list");
    }

}